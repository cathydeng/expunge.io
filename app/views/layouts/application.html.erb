  </head>
  <body>
    <div class="wrapper">
      <header role="banner">
        <nav class="navbar navbar-fixed-top bs-docs-nav topbar" role="navigation">
          <div class="container topbar">
            <!-- Collect the nav links, forms, and other content for toggling -->
            <a class="brand" href="/">Expunge.io</a>
            <ul class="nav navbar-nav pull-right">
              <li><%= link_to I18n.t("layouts.application.home", :default => "Home"), :action => "index" %></li>
              <li><%= link_to I18n.t("layouts.application.about", :default => "About"), :action => "about" %></li>
              <li><%= link_to I18n.t("layouts.application.faqs", :default => "FAQs"), :action => "FAQ" %></li>
              <li><%= link_to I18n.t("layouts.application.legal_aid", :default => "LEGAL AID!"), :action => "legalaid" %></li>
              <li>
                <% if I18n.locale == :es %>
                  <%= link_to "English", set_language_english_path %>
                  <% elsif I18n.locale == :en %>
                  <%= link_to "EspaÃ±ol", set_language_spanish_path %>
                <% end %>
              </li>



            </ul>
          </div>
        </nav>
      </header>

      <div id="content" class="container">
        <%= yield %>
      </div>

      <div style="height:30px"></div>

      <div class="push"></div>
    </div>

    <footer>
      <div class="container">
        <div class="row" style="font-size: .9em">
          <div class="span10" style="line-height:140%">

            Created by <a href="http://twitter.com/cthydng" target="_blank">Cathy Deng</a> | Code on <a href="https://github.com/cathydeng/expunge.io" target="_blank">GitHub</a><br>
            Dreamt up by <a href="https://twitter.com/MCJJustice" target="_blank">the Mikva Juvenile Justice Council</a> & Hosted by <a href="http://www.smartchicagocollaborative.org/">Smart Chicago</a>
          </div>
          <div class="span2">
            <a href="https://twitter.com/intent/tweet?text=If%20you%20have%20a%20juvenile%20record%2C%20you%20may%20be%20able%20to%20expunge%20it.%20Check%20out%20%23expungeio!&tw_p=tweetbutton&url=http%3A%2F%2Fexpunge.io"><%= image_tag "twitter.png" %></a>

            <a href="https://www.facebook.com/sharer/sharer.php?app_id=309437425817038&sdk=joey&u=http%3A%2F%2Fexpunge.io" target="_blank"><%= image_tag "fb.png" %></a>
          </div>
        </div>
      </div>
    </footer>

